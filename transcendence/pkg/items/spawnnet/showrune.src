include "spawnnet";



program show_rune(who,params)

if(!params)
	params := 5;
endif

params:= CInt(params);
if(!params)
	SendSysMessage(who,"parameter must be a number");
	return;
endif
var counter :=0;

foreach rune in ListItemsNearLocationOfType( who.x,who.y,who.z, params, 0xa300, who.realm )
	rune.graphic := 0x20f8;
	counter:=counter+1;
endforeach

SendSysMessage(who,"A total of "+counter+" runes have been shown");
endprogram